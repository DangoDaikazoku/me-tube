{
    "name": "youtube+ light",
    "version": "1.0",
    "manifest_version": 2,
    "description": "youtube functions",
    "icons": {
        "128": "images/dfp-ico.png"
    },
//_Media_Next_Track, _Media_Previous_Track, _Media_Stop, _Media_Play_Pause
// MediaKeyPlayPause, MediaKeyPrevious, MediaKeyNext, and MediaKeyStop
    "commands": {
        // "enable_media_keys": true,
        "yt-next": {
            "suggested_key": {
                "default": "Ctrl+Period",
                "mac": "Command+Period",
                // "chromeos": "Ctrl+.",
                "windows": "Ctrl+Period",
                "linux": "Ctrl+Period"
            },
            "description": "youtube next",
            "global": true
        },
        "yt-prev": {
            "suggested_key": {
                "default": "Ctrl+Comma",
                "mac": "Command+Comma",
                // "chromeos": "Ctrl+,",
                "windows": "Ctrl+Comma",
                "linux": "Ctrl+Comma"
            },
            "description": "youtube previous",
            "global": true
        }
        // "yt-pause-play": {
        //     "suggested_key": {
        //         "default": "Ctrl+Shift+p",
        //         "mac": "Command+Shift+p",
        //         // "chromeos": "Ctrl+Shift+Space",
        //         "windows": "Ctrl+Shift+p",
        //         "linux": "Ctrl+Shift+p"
        //     },
        //     "description": "youtube pause/play",
        //     "global": true
        // }
    },

    "chrome_url_overrides":{
        "newtab": "new-tab.html"
    },

    // "options_page": "options.html",
    "permissions": [
        "topSites",
        "tabs",
        "webRequest",
        "pageCapture",
        "http://*/*",
        "https://*/*"
    ],

    "content_scripts": [{
        "matches":["http://*/*", "https://*/*"],
        "js": ["scripts/jquery-2.1.3.min.js", "my-scripts/content-frame.js"],
        "run_at" : "document_end"
        // "all_frames": true
    }],

    "background": { "scripts": ["scripts/jquery-2.1.3.min.js","my-scripts/background.js"] },
    "browser_action": {
        "default_icon": "images/dfp-popup.png",
        "default_title": "youtube+ light",
        "default_popup": "popout.html"
    }
}
